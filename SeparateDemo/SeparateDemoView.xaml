<UserControl x:Class="WpfApp.SeparateDemo.SeparateDemoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp.SeparateDemo"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
	<Border Grid.Column="0"
	        BorderBrush="LightGray"
	        Margin="0,50,10,10"
	        BorderThickness="1"
	        Name="StorageLayout"
	        DockPanel.Dock="Top">
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
			<TextBlock Text="{Binding HeadText}" />
			<TextBlock Text="{Binding Name}" />
			<TextBlock Text="{Binding Address}" />
			<Button Content="Click Me!" Margin="0,10,0,0" Width="60"
			        Command="{Binding ChangeHeadTextCommand, Mode=OneTime}" />
		</StackPanel>
	</Border>
</UserControl>